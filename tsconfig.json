{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["dom", "es2015"],
    "strict": true,
    "noImplicitAny": true,
    "jsx": "react",
    "jsxFactory": "Reio.createElement",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "typeRoots": ["./src/definitions.d.ts", "node_modules/@types"]
  },
  "exclude": ["__tests__"],
  "include": ["src", "__tests__"]
}
